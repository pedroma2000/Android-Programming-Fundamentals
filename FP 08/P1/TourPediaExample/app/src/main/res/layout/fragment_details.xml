<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.DetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id:" />

        <TextView
            android:id="@+id/obj_ID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID" />

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:" />

        <TextView
            android:id="@+id/obj_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/name" />

        <TextView
            android:id="@+id/textView_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address:" />

        <TextView
            android:id="@+id/obj_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address" />

        <TextView
            android:id="@+id/textView_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category:" />

        <TextView
            android:id="@+id/obj_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Category" />

        <TextView
            android:id="@+id/textView_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location:" />

        <TextView
            android:id="@+id/obj_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location" />

        <TextView
            android:id="@+id/textView_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude:" />

        <TextView
            android:id="@+id/obj_lat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lat" />

        <TextView
            android:id="@+id/textView_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitude:" />

        <TextView
            android:id="@+id/obj_long"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Long" />

        <TextView
            android:id="@+id/textView_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details:" />

        <TextView
            android:id="@+id/obj_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Details" />

    </LinearLayout>
</FrameLayout>